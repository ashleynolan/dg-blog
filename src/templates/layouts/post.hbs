{{> html_start }}

	<div class="container">
		{{> masthead }}

		<section class="content post">
			<h1>{{ title }}</h1>

			{{> body }}

			{{#ifCond promo 'null'}}
			{{else}}
			{{> promos promo='carbon' }}
			{{/ifCond}}

			{{#if nodate}}{{else}}
			<p class="post-info separator-top">Article posted on the {{moment posted format="Do MMMM YYYY" }}</p>
			{{/if}}

			{{#if updated}}
				<p>Last updated on the <date>{{moment updated format="Do MMMM YYYY" }}</date></p>
			{{/if}}


			<div id="disqus_thread" class="comments separator-top"></div>

		</section>

		{{> footer }}
	</div>

{{#if nocomments}}
{{else}}

<script type="text/javascript">
window.disqusConfig = {
    url: 'https://ashleynolan.co.uk/blog/{{ url }}',  // Replace PAGE_URL with your page's canonical URL variable
    identifier: '{{ title }}' // Replace PAGE_IDENTIFIER with your page's unique identifier variable
};
</script>

{{/if}}

{{> html_end }}
